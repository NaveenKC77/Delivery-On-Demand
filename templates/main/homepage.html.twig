{% extends 'base.html.twig' %}

{% block title %}Delivery On Demand
{% endblock %}


{% block content %}

<div class="container-fluid">
    <!-- Hero Section -->
  <div class="bg-light text-center py-5">
    <div class="container">
      <h1 class="display-4">{{ hero_title|default('Welcome to Our Store') }}</h1>
      <p class="lead">{{ hero_text|default('Find the best products at unbeatable prices.') }}</p>
      <a href="/product" class="btn btn-primary btn-lg">{{ 'Shop Now'|trans }}</a>
    </div>
  </div>

  <!-- Products Section -->
  <section id="products" class="py-5">
    <div class="container">
      <h2 class="text-center ">{{ 'Featured Products'|trans }}</h2>
      <div class="row">
        {% for product in featuredProducts %}
          <!-- Product Card -->
				<div class="col-md-6 col-lg-4 col-xl-4">
				<div class="{{ product.stock == 0 ? 'card product-card border border-danger ' : 'card product-card ' }}">
						<img src="{{asset(product.imagePath)}}" class="card-img-top product-image" alt="Product Image">
						<div class="card-body">
							<h5 class="card-title text-truncate">{{product.name}}</h5>
							<p class="card-text text-muted small">{{product.description|slice(0,70)}}</p>
							<div class="price">AUD{{product.price}}</div>
							<a href="/product/single/{{product.id}}" class="btn btn-outline-primary mt-3 w-100">View Details</a>
						</div>
					</div>
				</div>
        {% endfor %}
      </div>
    </div>
  </section>
</div>

{# Jira Service Management Widget #}

<script data-jsd-embedded data-key="820fdc86-b0cf-406b-9bd2-cefcfc66ba70" data-base-url="https://jsd-widget.atlassian.com" src="https://jsd-widget.atlassian.com/assets/embed.js"></script>
{% endblock %}



