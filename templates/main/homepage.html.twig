{% extends 'base.html.twig' %}

{% block title %}Delivery On Demand
{% endblock %}


{% block main %}

<div class="container-fluid">
    <!-- Hero Section -->
  <div class="bg-light text-center py-5">
    <div class="container">
      <h1 class="display-4">{{ hero_title|default('Welcome to Our Store') }}</h1>
      <p class="lead">{{ hero_text|default('Find the best products at unbeatable prices.') }}</p>
      <a href="/product" class="btn btn-primary btn-lg">{{ 'Shop Now'|trans }}</a>
    </div>
  </div>

  <!-- Products Section -->
  <section id="products" class="py-5">
    <div class="container mx-auto">
      <h2 class="text-center ">{{ 'Featured Products'|trans }}</h2>
      <div class="row d-flex justify-content-center">
        {% for product in featuredProducts %}

       <!-- Product Card Component-->
       <twig:Product product="{{product}}"/>
      <!-- End Product Card -->

        {% endfor %}
      </div>
    </div>
  </section>
</div>

{# Jira Service Management Widget #}

<script data-jsd-embedded data-key="820fdc86-b0cf-406b-9bd2-cefcfc66ba70" data-base-url="https://jsd-widget.atlassian.com" src="https://jsd-widget.atlassian.com/assets/embed.js"></script>
{% endblock %}



