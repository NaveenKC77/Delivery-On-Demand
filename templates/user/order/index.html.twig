{% extends 'base.html.twig' %}

{% block title %}My Orders{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="list-group">
                <a href="{{ path('app_profile') }}" class="list-group-item list-group-item-action">
                    <i class="bi bi-person-circle"></i> Profile
                </a>
                <a href="{{ path('app_order') }}" class="list-group-item list-group-item-action active">
                    <i class="bi bi-bag"></i> My Orders
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-heart"></i> Wishlist
                </a>
                <a href="{{ path('app_notification') }}" class="list-group-item list-group-item-action">
                    <i class="bi bi-bell"></i> Notifications <span class="badge bg-danger">3</span>
                </a>
                <a href="#" class="list-group-item list-group-item-action text-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>

        <!-- Orders Details -->
        <div class="col-md-9">
            <!-- Orders Card -->
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5><i class="bi bi-receipt"></i> My Orders</h5>
                </div>
                <div class="card-body">
                    {% if pager is null %}
                        <p class="text-muted">You have no orders yet.</p>
                    {% else %}
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th>Order Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in pager %}
                                    <tr>
                                        <td>{{ order.id }}</td>
                                        <td><span class="badge bg-success">{{ order.status.label }}</span></td>
                                        <td>${{ order.total }}</td>
                                        <td>{{ order.createdAt|date('F j, Y \\a\\t g:i A') }}</td>
                                        <td>
                                            <a href="{{ path('app_view_order', { id: order.id }) }}" class="btn btn-primary btn-sm">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        <!-- Pagination Controls -->
                        <div class="pagination mt-3">
                            {{ pagerfanta(pager) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
