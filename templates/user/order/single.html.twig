{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }}{% endblock %}

{% block content %}
<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Order #{{ order.id }}</h2>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item"><strong>Status:</strong> <span class="badge bg-info">{{ order.status.label }}</span></li>
                <li class="list-group-item"><strong>Total:</strong> <span class="fw-bold">${{ order.total }}</span></li>
                <li class="list-group-item"><strong>Tax:</strong> ${{ order.tax }}</li>
                <li class="list-group-item"><strong>Shipping:</strong> ${{ order.shipping }}</li>
                <li class="list-group-item"><strong>Order Date: </strong> {{ order.createdAt|date('F j, Y \\a\\t g:i A') }} </li>
            </ul>

            <h4 class="mt-4">Items</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in order.cartItems %}
                            <tr>
                                <td>{{ item.product.name }}</td>
                                <td>{{ item.quantity }}</td>
                                <td>${{ item.unitPrice }}</td>
                                <td>${{ item.total }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a href="{{ path('app_order') }}" class="btn btn-secondary">Back to Orders</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
