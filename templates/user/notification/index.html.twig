{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="list-group">
                <a href="{{ path('app_profile') }}" class="list-group-item list-group-item-action">
                    <i class="bi bi-person-circle"></i> Profile
                </a>
                <a href="{{path('app_order')}}" class="list-group-item list-group-item-action">
                    <i class="bi bi-bag"></i> My Orders
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="bi bi-heart"></i> Wishlist
                </a>
                <a href="{{path('app_notification')}}" class="list-group-item list-group-item-action active">
                    <i class="bi bi-bell"></i> Notifications <span class="badge bg-danger">{{unread_notifications}}</span>
                </a>
                <a href="#" class="list-group-item list-group-item-action text-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>

        <!-- Profile and Notifications -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4>Profile & Notifications</h4>
                </div>
                <div class="card-body">
                    <!-- User Details -->
                    <div class="row">
                        <div class="col-md-6">
                            <h5>{{ user.firstName }} {{ user.lastName }}</h5>
                            <p><i class="bi bi-envelope"></i> {{ user.email }}</p>
                            <p><i class="bi bi-telephone"></i> {{ user.phoneNumber }}</p>
                        </div>
                        <div class="col-md-6 text-end">
                            <a href="{{ path('app_edit_profile') }}" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil"></i> Edit Profile
                            </a>
                        </div>
                    </div>

                    <hr>
<h5><i class="bi bi-bell"></i> Notifications</h5>
<div class="list-group">
    {% for notification in notifications %}
        <div 
            class="list-group-item list-group-item-action {% if not notification.isRead %}bg-light text-success{% endif %}"
            onclick="window.location.href='{{ path('app_notification_read', { 'id': notification.id }) }}';"
            style="cursor: pointer;"
        >
            <div class="d-flex justify-content-between">
                <div>
                    <strong>{{ notification.title }}</strong>
                    <p class="mb-1">{{ notification.content }}</p>
                </div>
                <small class="text-muted">{{ notification.createdAt|date('d M Y, H:i') }}</small>
            </div>
            <a href="{{ notification.link }}" class="btn btn-sm btn-primary mt-2">View Details</a>
        </div>
    {% else %}
        <p class="text-muted">No notifications available.</p>
    {% endfor %}
</div>

            </div>
        </div>
    </div>
</div>
{% endblock %}
