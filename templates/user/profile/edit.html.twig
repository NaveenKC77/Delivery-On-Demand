{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block main %}
<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
       <twig:ProfileSidenav active="{{active}}"/>
        <!-- Profile Details -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Edit My Profile</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <!-- Profile Picture (Optional) -->
                    <div class="text-center mb-3">
                        <img src="{{ app.user.avatarUri }}" alt="Profile Picture" class="rounded-circle border" style="width: 100px; height: 100px;">
                    </div>

                    <!-- First Name and Last Name -->
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.firstName) }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.lastName) }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>

                    <!-- Phone Number and Email -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            {{ form_label(form.phoneNumber) }}
                            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.phoneNumber) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control','readonly': 'readonly'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    <!-- Username and Password -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control','readonly': 'readonly'}}) }}
                            {{ form_errors(form.username) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.plainPassword) }}
                            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control' ,'value' : '*********','readonly':'readonly'}}) }}
                            {{ form_errors(form.plainPassword) }}
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="mt-3">
                        {{ form_label(form.customer.address) }}
                        {{ form_widget(form.customer.address, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.customer.address) }}
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="form-check mt-3">
                        {{ form_widget(form.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.agreeTerms, 'I agree to the terms', {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary mt-3 w-100">Save Changes</button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
